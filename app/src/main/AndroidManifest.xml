<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.apps.vagoster.rssfeaderv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/rss"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity 
            android:name=".ShowTechgearDescriptionActivity"
			android:label="@string/app_name" android:screenOrientation="portrait">
		</activity>
		<activity 
            android:name=".ShowTechblogDescriptionActivity"
			android:label="@string/app_name" android:screenOrientation="portrait">
		</activity>
		<activity 
            android:name=".ShowEngadgetDescriptionActivity"
			android:label="@string/app_name" android:screenOrientation="portrait">
		</activity>
        
        <!--  Techgear Activity -->
        <activity android:name=".TechgearActivity" android:screenOrientation="portrait"/>
 
        <!--  Techblog Activity -->
        <activity android:name=".TechblogActivity" android:screenOrientation="portrait"/>
 
        <!--  Engadget Activity -->
        <activity android:name=".EngadgetActivity" android:screenOrientation="portrait"/>

        <activity android:name=".TabLayoutActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>